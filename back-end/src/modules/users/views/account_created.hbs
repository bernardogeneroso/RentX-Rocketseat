<table
  align="center"
  border="0"
  cellpadding="0"
  cellspacing="0"
  width="100%"
  style="background-color: #353542;"
>
  <center style="width:100%">
    <div style="max-width:600px">
      <div
        style="background-color: #353542;border: 15px solid #47475a;padding: 50px;margin: 20px;"
      >
        <img
          src="https://app-fachoo.s3.eu-west-3.amazonaws.com/fachoo/fachoo.png"
          style="width: 100px;"
          alt="RenteX"
        />
        <br /><br />
        <hr />
        <p
          style="font-family:Arial;font-size:20px;font-weight:normal;line-height:18px;color:#d2d2dd;"
        >Hello
          <span style="color:#6868b9;font-weight: bold;">{{name}}</span>!!</p>
        <p
          style="font-family:Arial;font-size:20px;font-weight:normal;line-height:18px;color:#d2d2dd;"
        >Thank you for creating an account</p>
        <p
          style="font-family:Arial;font-size:20px;font-weight:normal;line-height:18px;color:#d2d2dd;"
        >You can now login to access your account!</p>
        <a
          href="#"
          style="background-color:#6c25df;border-radius:8px;display:inline-block;cursor:pointer;color:#ffffff;font-family:Arial;font-size:20px;font-weight:bold;padding:13px 32px;text-decoration:none;text-shadow:0px 1px 0px #4403bb;transition: all ease 0.2s;"
        >Login</a>
        <br />
        <br />
        <p
          style="font-family:Arial;font-size:20px;font-weight:normal;line-height:18px;color:#d2d2dd;"
        >Regards,</p>
        <p
          style="font-family:Arial;font-size:20px;font-weight:normal;line-height:18px;color:#d2d2dd;"
        ><strong>RenteX Team</strong></p>
      </div>
    </div>
  </center>
</table>